<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_employee_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">

                <!-- Styles -->
                <style>
                    body {
                        font-family: Calibri, Arial, sans-serif;
                    }
                    table, th, td {
                        font-family: Calibri, Arial, sans-serif;
                    }
                    @page {
                        size: A4 landscape;
                        margin: 15mm;
                    }
                </style>

                <div class="page">

                    <!-- Report Header -->
                    <h2 style="text-align:center; color:#4CAF50; margin-bottom:10px;">
                        Employee Report
                    </h2>

                    <!-- Filters -->
                    <div style="margin-bottom:15px; font-size:14px; color:#333;">

                        <t t-if="o.job_province">
                            <strong>Province:</strong>
                            <t t-esc="o.job_province.name"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.court_level">
                            <strong>Court Level:</strong>
                            <t t-esc="o.court_level"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.job_status">
                            <strong>Job Status:</strong>
                            <t t-esc="o.job_status"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.recruitment_type">
                            <strong>Recruitment Type:</strong>
                            <t t-esc="o.recruitment_type"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.execution_type">
                            <strong>Execution Type:</strong>
                            <t t-esc="o.execution_type"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.ethnicity">
                            <strong>Ethnicity:</strong>
                            <t t-esc="o.ethnicity"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.category">
                            <strong>Category:</strong>
                            <t t-esc="o.category"/>
                        </t>

                    </div>

                    <!-- Employee Details Table -->
                    <table style="width:100%; border-collapse:collapse; font-size:14px;" border="1">
                        <thead style="background-color:#f5f5f5;">
                            <tr>
                                <th style="padding:8px;">Employee</th>
                                <th style="padding:8px;">Job</th>
                                <th style="padding:8px;">Grade</th>
                                <th style="padding:8px;">Step</th>
                                <th style="padding:8px;">Court Level</th>
                                <th style="padding:8px;">Job Status</th>
                                <th style="padding:8px;">Category</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="o.employee_lines" t-as="line">
                                <tr>
                                    <td style="padding:8px;">
                                        <t t-esc="line.employee_id.name if line.employee_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.job_id.name if line.job_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.grade_id.name if line.grade_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.step_id.name if line.step_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.court_level if line.court_level else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.job_status if line.job_status else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.category if line.category else '-'"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Summary -->
                    <div style="margin-top:20px; font-size:14px; color:#333;">
                        <strong>Total Records:</strong>
                        <t t-esc="o.total_records if o.total_records else '0'"/>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top:30px; text-align:center; color:#888; font-size:12px;">
                        <p>
                            Generated on
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                        </p>
                        <p>Powered by Supreme Court</p>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
