<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_employee_education_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">

                <!-- Styles -->
                <style>
                    body {
                    font-family: Calibri, Arial, sans-serif;
                    }
                    table, th, td {
                    font-family: Calibri, Arial, sans-serif;
                    }
                    @page {
                    size: A4 landscape;
                    margin: 15mm;
                    }
                </style>

                <div class="page">

                    <!-- Report Header -->
                    <h2 style="text-align:center; color:#4CAF50; margin-bottom:10px;">
                        Employee Education Report
                    </h2>

                    <div style="margin-bottom:15px; font-size:14px; color:#333;">

                        <t t-if="o.university_id">
                            <strong>University:</strong>
                            <t t-esc="o.university_id.name"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.degree_id">
                            <strong>Degree:</strong>
                            <t t-esc="o.degree_id.name"/>
                            <span style="margin-left:20px;"/>
                        </t>

                        <t t-if="o.faculty_id">
                            <strong>Faculty:</strong>
                            <t t-esc="o.faculty_id.name"/>
                        </t>

                    </div>


                    <!-- Education Details Table -->
                    <table style="width:100%; border-collapse:collapse; font-size:14px;" border="1">
                        <thead style="background-color:#f5f5f5;">
                            <tr>
                                <th style="padding:8px;">Employee</th>
                                <th style="padding:8px;">Country</th>
                                <th style="padding:8px;">Province</th>
                                <th style="padding:8px;">University</th>
                                <th style="padding:8px;">Faculty</th>
                                <th style="padding:8px;">Degree</th>
                                <th style="padding:8px;">Major</th>
                                <th style="padding:8px;">Start Date</th>
                                <th style="padding:8px;">End Date</th>
                                <th style="padding:8px;">Batch No</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="o.education_lines" t-as="line">
                                <tr>
                                    <td style="padding:8px;">
                                        <t t-esc="line.employee_id.name if line.employee_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.country_id.name if line.country_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.province_id.name if line.province_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.university_id.name if line.university_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.faculty_id.name if line.faculty_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.degree_id.name if line.degree_id else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.major if line.major else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.education_start_date if line.education_start_date else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.education_end_date if line.education_end_date else '-'"/>
                                    </td>
                                    <td style="padding:8px;">
                                        <t t-esc="line.batch_no if line.batch_no else '-'"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Summary -->
                    <div style="margin-top:20px; font-size:14px; color:#333;">
                        <strong>Total Records:</strong>
                        <t t-esc="o.total_records if o.total_records else '0'"/>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top:30px; text-align:center; color:#888; font-size:12px;">
                        <p>
                            Generated on
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                        </p>
                        <p>Powered by Supreme Court</p>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
