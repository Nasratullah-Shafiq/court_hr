<odoo>
    <template id="report_employee_retirement_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">

                <!-- Styles -->
                <style>
                    body {
                        font-family: Calibri, Arial, sans-serif;
                    }
                    table, th, td {
                        font-family: Calibri, Arial, sans-serif;
                    }
                    @page {
                        size: A4 landscape;
                        margin: 15mm;
                    }
                </style>

                <div class="page">

                    <!-- Report Header -->
                    <h2 style="text-align:center; color:#4CAF50; margin-bottom:10px;">
                        Employee Retirement Report
                    </h2>

                    <!-- Date Range & Retirement Type -->
                    <div style="margin-bottom:15px; font-size:14px; color:#333;">
                        <p>
                            <strong>From:</strong>
                            <t t-esc="o.start_date if o.start_date else '-'"/>
                            <strong style="margin-left:20px;">To:</strong>
                            <t t-esc="o.end_date if o.end_date else '-'"/>
                        </p>

                        <p>
                            <strong>Retirement Type:</strong>
                            <t t-esc="o.retirement_type_id.name if o.retirement_type_id else 'All'"/>
                        </p>
                    </div>

                    <!-- Retirement Details Table -->
                    <table style="width:100%; border-collapse:collapse; font-size:14px;" border="1">
                        <thead style="background-color:#f5f5f5;">
                            <tr>
                                <th style="padding:8px;">Employee</th>
                                <th style="padding:8px;">Type</th>
                                <th style="padding:8px;">Reason</th>
                                <th style="padding:8px;">End Date</th>
                                <th style="padding:8px;">Month</th>
                                <th style="padding:8px;">Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.retirement_lines" t-as="line">
                                <tr>
                                    <td style="padding:8px;"><t t-esc="line.employee_id.name if line.employee_id else '-'"/></td>
                                    <td style="padding:8px;"><t t-esc="line.retirement_type_id.name if line.retirement_type_id else '-'"/></td>
                                    <td style="padding:8px;"><t t-esc="line.retirement_reason_id.name if line.retirement_reason_id else '-'"/></td>
                                    <td style="padding:8px;"><t t-esc="line.retirement_end_date if line.retirement_end_date else '-'"/></td>
                                    <td style="padding:8px;"><t t-esc="line.retirement_month if line.retirement_month else '-'"/></td>
                                    <td style="padding:8px;"><t t-esc="line.retirement_year if line.retirement_year else '-'"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Summary Totals -->
                    <div style="margin-top:20px; font-size:14px; color:#333;">
                        <strong>Total Retirements:</strong>
                        <t t-esc="o.total_retirements if o.total_retirements else '0'"/>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top:30px; text-align:center; color:#888; font-size:12px;">
                        <p>
                            Generated on
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                        </p>
                        <p>Powered by Supreme Court</p>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
