<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================== -->
    <!-- TREE VIEW -->
    <!-- ===================== -->
    <record id="view_employee_reward_tree" model="ir.ui.view">
        <field name="name">employee.reward.tree</field>
        <field name="model">employee.reward</field>
        <field name="arch" type="xml">
            <tree string="Employee Reward">
                <field name="employee_id"/>
                <field name="reward_type"/>
                <field name="amount_of_cash_for_reward"/>
                <field name="order_no"/>
                <field name="order_date"/>
                <field name="organization_id"/>
            </tree>
        </field>
    </record>

    <!-- ===================== -->
    <!-- FORM VIEW -->
    <!-- ===================== -->
    <record id="view_employee_reward_form" model="ir.ui.view">
        <field name="name">employee.reward.form</field>
        <field name="model">employee.reward</field>
        <field name="arch" type="xml">
            <form string="Employee Reward">
                <sheet>
                    <group>
                        <field name="employee_id"  required="1"/>
                        <field name="reward_type"/>
                        <field name="amount_of_cash_for_reward"/>
                        <field name="order_no"/>
                        <field name="order_date"/>
                        <field name="organization_id"/>
                    </group>

                    <group>
                        <field name="reason"/>
                        <field name="attachments" widget="many2many_binary"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ===================== -->
    <!-- PIVOT VIEW -->
    <!-- ===================== -->
    <record id="view_employee_reward_pivot" model="ir.ui.view">
        <field name="name">employee.reward.pivot</field>
        <field name="model">employee.reward</field>
        <field name="arch" type="xml">
            <pivot string="Employee Reward Analysis">
                <field name="employee_id" type="row"/>
                <field name="reward_type" type="row"/>
                <field name="order_date" type="col"/>
                <field name="amount_of_cash_for_reward" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ===================== -->
    <!-- GRAPH VIEW -->
    <!-- ===================== -->
    <record id="view_employee_reward_graph" model="ir.ui.view">
        <field name="name">employee.reward.graph</field>
        <field name="model">employee.reward</field>
        <field name="arch" type="xml">
            <graph string="Employee Reward Graph" type="bar">
                <field name="reward_type" type="row"/>
                <field name="order_date" type="col"/>
                <field name="amount_of_cash_for_reward" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ===================== -->
    <!-- SEARCH VIEW -->
    <!-- ===================== -->
    <record id="view_employee_reward_search" model="ir.ui.view">
        <field name="name">employee.reward.search</field>
        <field name="model">employee.reward</field>
        <field name="arch" type="xml">
            <search string="Search Employee Rewards">

                <!-- Search fields -->
                <field name="employee_id"/>
                <field name="reward_type"/>
                <field name="organization_id"/>

                <!-- Search Panel -->
                <searchpanel>
                    <field name="reward_type" string="Reward Type" enable_counters="1" icon="fa-trophy"/>
                    <field name="organization_id" string="Organization" enable_counters="1" icon="fa-building"/>
                    <field name="reward_month" string="Retirement Month" enable_counters="1" icon="fa-calendar-o"/>
                    <field name="reward_year" string="Retirement Year" enable_counters="1" icon="fa-calendar-o"/>
                </searchpanel>

            </search>
        </field>
    </record>

    <!-- ===================== -->
    <!-- ACTION WINDOW -->
    <!-- ===================== -->
    <record id="action_employee_reward" model="ir.actions.act_window">
        <field name="name">Employee Reward</field>
        <field name="res_model">employee.reward</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="search_view_id" ref="view_employee_reward_search"/>
    </record>

    <!-- ===================== -->
    <!-- MENU ITEMS -->
    <!-- ===================== -->

    <!-- Root menu -->
<!--    <menuitem-->
<!--        id="menu_employee_reward_root"-->
<!--        name="Reward"-->
<!--        parent="hr.menu_hr_root"-->
<!--        sequence="65"/>-->

    <!-- Child menu -->
    <menuitem
        id="menu_employee_reward"
        name="Employee Reward"
        parent="menu_employee_resume_root"
        action="action_employee_reward"
        sequence="10"/>

</odoo>
