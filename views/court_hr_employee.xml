        <record id="view_hr_employee_kanban_inherit_job_status" model="ir.ui.view">
            <field name="name">hr.employee.kanban.inherit.job.status</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">

                <!-- 1️⃣ Declare the field -->
                <xpath expr="//kanban" position="inside">
                    <field name="job_status"/>
                </xpath>

                <!-- 2️⃣ Display Job Status safely -->
                <xpath expr="//t[@t-name='kanban-box']//span[contains(@class,'o_kanban_record_subtitle')]"
                       position="after">
                    <t t-if="record.job_status">
                        <div class="mt-1">
                            <span class="me-1 fw-bold">Job Status:</span>
                            <span
                                    t-att-class="
                                        'badge text-white ' +
                                        (
                                            record.job_status.raw_value == 'برحال' and 'bg-success' or
                                            record.job_status.raw_value == 'بی سرنوشت' and 'bg-warning' or
                                            record.job_status.raw_value == 'منفصل' and 'bg-warning' or
                                            record.job_status.raw_value == 'معزول' and 'bg-warning' or

                                            record.job_status.raw_value == 'منفک' and 'bg-danger' or
                                            record.job_status.raw_value == 'وفات' and 'bg-dark' or
                                            record.job_status.raw_value == 'متقاعد' and 'bg-info' or
                                            'bg-secondary'
                                        )
                                    ">
                                <t t-esc="record.job_status.value"/>
                            </span>
                        </div>
                    </t>
                </xpath>

            </field>
        </record>

